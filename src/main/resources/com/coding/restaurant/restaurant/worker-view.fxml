<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="acpInWorker" prefHeight="800.0" prefWidth="1040.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.coding.restaurant.restaurant.controllers.WorkerController">
    <children>
        <VBox fx:id="vbxWorker" alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1040.0" spacing="75.0">
            <children>
                <Button fx:id="btnNewWorker" mnemonicParsing="false" text="Ajouter un nouvel employé" />
            <TableView fx:id="tvbWorkers" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="colName" prefWidth="75.0" text="Nom" />
                <TableColumn fx:id="colFirstName" prefWidth="75.0" text="Prénom" />
                  <TableColumn fx:id="colActive" prefWidth="75.0" text="Actif" />
                  <TableColumn fx:id="colHours" prefWidth="75.0" text="Heures travailllées" />
                  <TableColumn fx:id="colRole" prefWidth="75.0" text="Poste" />
                  <TableColumn fx:id="colArrived" prefWidth="75.0" text="Date d'arrivée" />
                  <TableColumn fx:id="colDeparture" prefWidth="75.0" text="Date de départ" />
                  <TableColumn fx:id="colActions" prefWidth="75.0" text="Actions" />
              </columns>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            </children>
         <padding>
            <Insets top="75.0" />
         </padding>
        </VBox>
        <fx:include fx:id="acpNewWorker" source="newWorker-view.fxml" />
    </children>
</AnchorPane>
