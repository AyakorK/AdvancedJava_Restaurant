      <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
      </padding>
      <children>
        <Label text="Tables"/>
        <HBox alignment="TOP_CENTER" spacing="20">
          <children>
            <ToggleButton fx:id="toggleFreeTables" onAction="#showFreeTables" text="Voir les tables libres"/>
            <ToggleButton fx:id="toggleIndoorTables" onAction="#showIndoorTables" text="Tables en intérieur"/>
            <ToggleButton fx:id="toggleTerraceTables" onAction="#showOutdoorTables" text="Tables en terrasse"/>
            <Button fx:id="createTable" onAction="#createTable" text="Créer une table"/>
            <Button fx:id="btnCreateOrder" onAction="#createTable" text="Créer une commande"/>
          </children>
        </HBox>
        <ListView fx:id="listView"/>
      </children>
    </VBox>
  </children>
  <fx:include fx:id="acpInWorker" source="createOrders-view.fxml"/>
</AnchorPane>
