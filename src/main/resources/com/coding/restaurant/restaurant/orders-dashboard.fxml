<AnchorPane prefHeight="800.0" prefWidth="1040.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.coding.restaurant.restaurant.controllers.OrdersDashboardController">

  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
  <HBox alignment="TOP_CENTER" prefHeight="21.0" prefWidth="960.0">
    <opaqueInsets>
      <Insets />
    </opaqueInsets>
  </HBox>

  <Label layoutX="329.0" layoutY="1.0" text="Liste des Commandes">
      <font>
         <Font size="40.0" />
      </font></Label>
  <ListView fx:id="ordersListView" layoutX="56.0" layoutY="125.0" prefHeight="712.0" prefWidth="960.0" />
<Button fx:id="activeOrdersButton" layoutX="252.0" layoutY="74.0" onAction="#filteredOrders" text="Commands actives" style="-fx-background-color: transparent; -fx-border-color: #411111; -fx-border-radius: 10px; -fx-border-width: 1px;" textFill="#411111">
  <font>
    <Font size="20.0" />
  </font>
</Button>

<Button fx:id="allOrdersButton" layoutX="570.0" layoutY="71.0" onAction="#displayPassedOrders" text="Commandes passées" style="-fx-background-color: transparent; -fx-border-color: #411111; -fx-border-radius: 10px; -fx-border-width: 1px;" textFill="#411111">
  <font>
    <Font size="20.0" />
  </font>
</Button>
   <Button fx:id="lastCommandsButton" layoutX="723.0" layoutY="70.0" onAction="#displayLastOrders" text="Dernières Commandes passées">
      <font>
         <Font size="20.0" />
      </font>
   </Button>
</AnchorPane>
